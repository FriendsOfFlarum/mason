{
    "name": "fof/mason",
    "description": "Add custom fields to discussions",
    "keywords": [
        "extension",
        "flarum",
        "flagrow",
        "discussion",
        "custom-fields"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com/"
        }
    ],
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/mason/issues",
        "source": "https://github.com/FriendsOfFlarum/mason"
    },
    "require": {
        "flarum/core": ">=0.1.0-beta.8 <0.1.0-beta.14"
    },
    "replace": {
        "flagrow/mason": "*"
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF Mason",
            "icon": {
                "name": "fas fa-dungeon",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/7028"
        }
    },
    "autoload": {
        "psr-4": {
            "FoF\\Mason\\": "src/"
        }
    }
}
